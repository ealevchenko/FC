@using WebUI.App_GlobalResources;
@{
    ViewBag.Title = @GlobalResource.home_title_oil;
    ViewBag.section = @GlobalResource.home_remains_tanks_oil;
}

@section styles {
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/DateTime/css")
    <link rel="stylesheet" type="text/css" href="~/Content/View/remainstanks_oil.css">
}

@section scripts {
    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/DateTime")
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/View/common.js" type="text/javascript"></script>
    <script src="~/Scripts/View/oil_remainstanks.js" type="text/javascript"></script>
    <script>
        $('body').addClass('img-header-oilsales');
    </script>
}

<div id="report" class="report-wide">
    <div id="tabs-reports">
        <ul>
            <li><a href="#tabs-report-1" id="link-tabs-report-1"></a></li>
            @*<li><a href="#tabs-report-2" id="link-tabs-report-2"></a></li>*@
        </ul>
        <div id="tabs-report-1">
            <div id="table-panel">
            </div>
            <table class='display compact' id="table-remains-tanks" style="width:100%" cellpadding="0">
                <tfoot>
                        <tr>
                            <th colspan="2" class="title-foot">ИТОГО: </th>
                            <td class="total-foot" id="volume"></td>
                            <td></td>
                            <td class="total-foot" id="mass"></td>
                        </tr>
                    </tfoot>
            </table>
        </div>
        @*<div id="tabs-report-2">
                <table class='display compact' id="table-cargo-disl-operations" style="width:100%" cellpadding="0"></table>
            </div>*@
    </div>

</div>








