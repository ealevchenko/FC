@using WebUI.App_GlobalResources;
@{
    ViewBag.Title = @GlobalResource.home_title;
    ViewBag.section = @GlobalResource.home_fuel_sales;
}

@section styles {
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/DateTime/css")
    <link rel="stylesheet" type="text/css" href="~/Content/View/fuelsales.css">
}

@section scripts {
    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/DateTime")
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/View/common.js" type="text/javascript"></script>
    <script src="~/Scripts/View/fuelsales.js" type="text/javascript"></script>
    <script>
        $('body').addClass('img-header-fuelsales');
    </script>
}

<div id="report" class="report-wide">
    <div id="tabs-reports">
        <ul>
            <li><a href="#tabs-report-1" id="link-tabs-report-1"></a></li>
            @*<li><a href="#tabs-report-2" id="link-tabs-report-2"></a></li>*@
        </ul>
        <div id="tabs-report-1">
            <div id="table-panel">
            </div>
            <table class='display compact' id="table-fuel-sales" style="width:100%" cellpadding="0">
                
                <tfoot>
                    <tr><th colspan="6" class="title-foot">ИТОГО A92: </th><td class ="total-foot"><label id="a92-volume" ></label></td><td class="total-foot"><label id="a92-mass" ></label></td><td></td></tr>
                    <tr><th colspan="6" class="title-foot">ИТОГО A95: </th><td class="total-foot"><label id="a95-volume" ></label></td><td class="total-foot"><label id="a95-mass" ></label></td><td></td></tr>
                    <tr><th colspan="6" class="title-foot">ИТОГО ДТ: </th><td class="total-foot"><label id="dt-volume" ></label></td><td class="total-foot"><label id="dt-mass" ></label></td><td></td></tr>
                    <tr><th colspan="6" class="title-foot">ИТОГО Керосин: </th><td class="total-foot"><label id="kerosin-volume" ></label></td><td class="total-foot"><label id="kerosin-mass" ></label></td><td></td></tr>
                </tfoot>
            </table>
        </div>
        @*<div id="tabs-report-2">
                <table class='display compact' id="table-cargo-disl-operations" style="width:100%" cellpadding="0"></table>
            </div>*@
    </div>

</div>

